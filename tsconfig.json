{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "ES6",
    "target": "ES2015",
    "jsx": "react",
    "allowJs": true,
    "types": ["chrome-types"]
  },
  "include": ["src"],
  "exclude": ["spec"]
}
