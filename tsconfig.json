{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "mocks/*": ["./__mocks__/*"]
    },
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "ES6",
    "target": "ES2015",
    "allowJs": true,
    "types": ["chrome-types", "jest"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["spec"]
}
