{
  "name": "My Extension",
  "manifest_version": 3,
  "version": "1.0",
  "description": "My really cool chrome extension",
  "host_permissions": ["http://*", "https://*"],
  "permissions": ["alarms", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["dist/content_script.js"],
      "matches": ["http://*", "https://*"]
    }
  ],
  "background": {
    "service_worker": "dist/service_worker.js",
    "type": "module"
  }
}
